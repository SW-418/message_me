<div class="iconheader">
    <h2 class="ui center aligned icon header">
        <i class="inverted circular coffee icon"></i>
        Chat Together
    </h2>
</div>

<div class="ui two column grid">
    <div class="row">
        <div class="twelve wide column">
            <div class="ui fluid raised card chatbox">
                <div class="content">
                    <div class="ui feed">
                        <%= render @messages %>
                    </div>
                </div>
                <div class="extra content">
                    <%= form_with url: message_path, method: :post, data: { turbo: false } do |form| %>
                        <div class="field">
                            <div class="ui fluid icon input">
                                <%= form.text_field :message, placeholder: 'Type a message...' %>
                                    <%= form.button "Send" , class: 'bordered inverted orange edit icon' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="four wide column">
            <div class="ui fluid raised card chatbox">
                <div class="content">
                    <div class="ui inverted vertical menu">
                        <a class="active item">
                            Home
                        </a>
                        <a class="item">
                            Messages
                        </a>
                        <a class="item">
                            Friends
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>