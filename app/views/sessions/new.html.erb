<div class="iconheader">
    <h2 class="ui center aligned icon header">
        MessageMe - An IM App
        <i class="inverted circular unlock icon"></i>
        Please login or create and account
    </h2>
</div>

<div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
        <div class="column">
            <%= form_with url: login_path, method: :post do |form| %>
            <div class = "field">
                <%= form.label :username, "Username" %>
                <%= form.text_field :username, placeholder: 'Username', class: 'ui left icon input' %>
                <i class="user icon"></i>
            </div>
            <div class = "field">
                <%= form.label :password, "Password" %>
                <%= form.password_field :password, placeholder: 'Password', class: 'ui left icon input' %>
                <i class="lock icon"></i>
            </div>
                <%= form.button "Login", class: 'ui orange submit button' %>
            <% end %>
        </div>
        <div class="middle aligned column">
            <div class="ui orange big button">
                <i class="signup icon"></i>
                Sign Up
            </div>
        </div>
    </div>
    <div class="ui vertical divider">
        Or
    </div>
</div>
